<?xml version="1.0" encoding="utf-8" ?>
<log4net>
  <appender name="myConsoleAppender" type="log4net.Appender.ConsoleAppender">
    <layout type="log4net.Layout.PatternLayout">
      <conversionPattern value="%-4timestamp [%thread] %-5level %logger - %message%newline" />
    </layout>
  </appender>
  
  <appender name="objApp" type="SimpleObjectAppender.SimpleForwarder">
    <appender-ref ref="myConsoleAppender" />
    <Details type="SimpleObjectAppender.Descriptor">
      <Property>Name</Property>
      <Property>Age</Property>
    </Details>
    <Separator>, </Separator>
    <EqualsSymbol>:</EqualsSymbol>
  </appender>

  <root>
    <level value="DEBUG" />
    <appender-ref ref="myConsoleAppender" />
    <appender-ref ref="objApp" />
  </root>
</log4net>
  