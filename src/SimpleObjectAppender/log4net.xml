<?xml version="1.0" encoding="utf-8" ?>
<log4net>
  <appender name="myConsoleAppender" type="log4net.Appender.ConsoleAppender">
    <layout type="log4net.Layout.PatternLayout">
      <conversionPattern value="%-4timestamp %-5level %logger - %message%newline" />
    </layout>
  </appender>

  <appender name="ObjectConsoleAppender" type="log4net.Appender.ConsoleAppender">
    <layout type="log4net.Layout.PatternLayout">
      <Converter>
        <name value="object" />
        <type value="SimpleObjectAppender.SimpleObjectConverter" />
      </Converter>
      <conversionPattern value="%-4timestamp %-5level %logger - Name is:%object{Name}, age:%object{Age}%newline" />
    </layout>
  </appender>

  <appender name="objApp" type="SimpleObjectAppender.SimpleObjectForwarder">
    <appender-ref ref="myConsoleAppender" />
    <Details>
      <Property>Name</Property>
      <Property>Age</Property>
    </Details>
    <Separator>, </Separator>
    <EqualsSymbol>:</EqualsSymbol>
  </appender>

  <root>
    <level value="DEBUG" />
    <appender-ref ref="myConsoleAppender" />
    <appender-ref ref="ObjectConsoleAppender" />
    <appender-ref ref="objApp" />
  </root>
</log4net>
